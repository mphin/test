[General]
force-http-engine-hosts = script.hub, *.script.hub

[Script]
http-request ^https?:\/\/script\.hub\/($|edit\/|reload) script-path=https://raw.githubusercontent.com/mphin/test/main/loon/plugin/script-hub/script/script-hub.js, timeout=300, tag=Script Hub: 前端
http-request ^https?:\/\/script\.hub\/file\/_start_\/.+type=(?:qx-rewrite|surge-module|loon-plugin|all-module) script-path=https://raw.githubusercontent.com/mphin/test/main/loon/plugin/script-hub/script/Rewrite-Parser.js, timeout=300, tag=Script Hub: 重写转换
http-request ^https?:\/\/script\.hub\/file\/_start_\/.+type=rule-set script-path=https://raw.githubusercontent.com/mphin/test/main/loon/plugin/script-hub/script/rule-parser.js, timeout=300, tag=Script Hub: 规则集转换
http-request ^https?:\/\/script\.hub\/convert\/ script-path=https://raw.githubusercontent.com/mphin/test/main/loon/plugin/script-hub/script/script-converter.js, timeout=300, tag=Script Hub: 脚本转换

[Mitm]
hostname = script.hub, *.script.hub
